{{#if account}}
<script src="/javascripts/newreview.js"></script>

<title>{{account.nickname}}</title>
<div class="container border border-primary" style=" width: 70%; margin-bottom: 10%; margin-top:5%">
  <h1 class="mt-3 text-center text-white"> Hola {{account.name}}</h1>
  <form class="container" style="width: 50%;">
    <div class="form-group mt-4">
      <label class="text-muted">Nombre</label>
      <input type="text" class="form-control bg-transparent text-white border border-primary" id="name"
        value="{{account.name}}">
    </div>
    <div class="form-group mt-4">
      <label class="text-muted">Apellido</label>
      <input type="text" class="form-control bg-transparent text-white border border-primary" id="surname"
        value="{{account.surname}}">
    </div>
    <div class="form-group mt-4">
      <label class="text-muted">Describete</label>
      <textarea class="form-control bg-transparent text-white border border-primary" id="description"
        rows="3">{{account.description}}</textarea>
    </div>
    <div class="form-group mt-4">
      <label class="text-muted">Imagen de perfil (url)</label>
      <input type="text" class="form-control bg-transparent text-white border border-primary" id="avatar"
        value="{{account.avatar}}">
    </div>
    <div class="d-flex justify-content-center mb-5">
      <button id="saveData" class="btn btn-primary border border-primary text-white mr-3" type="button">Guardar</button>
      <button class="btn btn-danger text-white" onClick="window.location='/user/profile';" type="button">
        Cancelar</button>
    </div>
  </form>
</div>

<script>
  $("#saveData").on('click', event => {
    $.ajax({
      url: '/user/edit',
      type: 'PUT',
      data: {
        name: $('#name').val(),
        surname: $('#surname').val(),
        description: $('#description').val(),
        avatar: $('#avatar').val(),
      },
      success: result => {
        window.location = 'profile';
      }
    });
  });
</script>
{{/if}}